{
  "name": "college-vk-bot",
  "version": "2.2.0",
  "author": "Morbo",
  "license": "MIT",
  "scripts": {
    "start": "npm run build && npm run serve",
    "build": "npm run clean && tsc",
    "clean": "rimraf dist/*",
    "serve": "node dist/index.js",
    "watch": "nodemon --watch src -e ts --exec ts-node src/bot.ts",
    "debug": "nodemon --watch src -e ts --exec ts-node src/bot.ts --inspect",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "test": "jest",
    "test:cov": "jest --coverage"
  },
  "dependencies": {
    "chalk": "^3.0.0",
    "cheerio": "^1.0.0-rc.3",
    "dotenv": "^8.2.0",
    "glob": "^7.1.6",
    "node-fetch": "^2.6.0",
    "sharp": "^0.24.1",
    "vk-io": "4.0.0-rc.26"
  },
  "devDependencies": {
    "@types/cheerio": "^0.22.16",
    "@types/glob": "^7.1.1",
    "@types/jest": "^25.1.2",
    "@types/node": "^13.5.0",
    "@types/node-fetch": "^2.5.4",
    "@types/sharp": "^0.24.0",
    "@typescript-eslint/eslint-plugin": "^2.20.0",
    "@typescript-eslint/parser": "^2.20.0",
    "eslint": "^6.8.0",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "lint-staged": "^10.0.7",
    "nodemon": "^2.0.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^25.2.1",
    "ts-node": "^8.6.2",
    "typescript": "^3.7.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": "eslint --cache --fix"
  }
}
